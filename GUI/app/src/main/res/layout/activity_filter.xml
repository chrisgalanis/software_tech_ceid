<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) Scrollable form with accessible description -->
    <ScrollView
        android:id="@+id/scroll_filters"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:contentDescription="@string/desc_filter_form">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvHomeFilterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Address -->
            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:hint="@string/hint_address"
                android:inputType="textPostalAddress"
                android:autofillHints="postalAddress"
                android:drawableStart="@drawable/ic_person_search"
                android:drawablePadding="8dp"
                android:paddingStart="10dp"
                android:layout_marginBottom="12dp"/>

            <!-- Price From / To -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etPriceFrom"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_price_from"
                    android:inputType="numberDecimal"
                    android:autofillHints="none"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/etPriceTo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_price_to"
                    android:inputType="numberDecimal"
                    android:autofillHints="none"/>
            </LinearLayout>

            <!-- Area From / To -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etAreaFrom"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_area_from"
                    android:inputType="numberDecimal"
                    android:autofillHints="none"/>

                <View
                    android:layout_width="8dp"
                    android:layout_height="match_parent"/>

                <EditText
                    android:id="@+id/etAreaTo"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:minHeight="48dp"
                    android:layout_weight="1"
                    android:hint="@string/hint_area_to"
                    android:inputType="numberDecimal"
                    android:autofillHints="none"/>
            </LinearLayout>

            <!-- Floor selector -->
            <Spinner
                android:id="@+id/spinnerFloor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:entries="@array/floor_array"
                android:layout_marginBottom="12dp"/>

            <!-- Search button -->
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="#03A9F4"
                android:textColor="#000000"
                android:minHeight="48dp"
                android:text="@string/search_button"/>
        </LinearLayout>
    </ScrollView>

    <!-- 2) Fixed bottom nav -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/layout_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
